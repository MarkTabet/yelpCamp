
<%- include("../partials/header") %>


<header class="jumbotron">
        <div class="container">
            <h1>Our Campgrounds</h1>
            <p>View our hand-picked campgrounds from around the world. Register to become a member and add your own campgrounds. You can also sign up for free email updates.</p>
            <p><a class="btn btn-primary btn-lg" href="/campgrounds/new" role="button">Add New Campground &raquo;</a></p>
        </div>
    </header>
        
    <div class="row">
        <div class="col-lg-12">
            <h3>Our Most Popular Sites</h3>
        </div>
    </div>    
    
    <div class="row" style="display: flex; flex-wrap: wrap;">
        <% campgrounds.forEach(element => { %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= element.image %>" alt="">
                    <div class="caption">
                        <h4><%= element.name %></h4>
                        <p>
                            <a href="/campgrounds/<%= element._id %>" class="btn btn-primary">More Info</a>
                        </p>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>


<%- include("../partials/footer") %>
        