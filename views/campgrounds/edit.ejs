
<%- include("../partials/header") %>


<div class="row justify-content-center">

    <img style="display: block; margin: auto; width: 300px" src="<%= campground.image %>" style="height: 400px">
    
    <div class="col-md-12 text-center mt-4">
        <h1 style="text-align: center">Edit <%= campground.name %></h1>
    </div>

    <div class="col-xs-12">
        <form class="form-signin" action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name">Name</label>
                <input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>">
            </div>
            <div class="form-group">
                <label for="price">Cost per night</label>
                <input class="form-control" type="number" name="campground[price]" min="0.01" step="0.01" value="<%= campground.price %>">
            </div>
            <div class="form-group">
                <label for="image">Image</label>
                <input type="file" id="image" name="image" accept="image/*">
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <input class="form-control" type="text" name="campground[description]" value="<%= campground.description %>">
            </div>
            <div class="form-group">
                <label for="location">Location</label>
                <input class="form-control" type="text" name="campground[location]" value="<%= campground.location %>">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block">Submit</button>
            </div>
        </form>

        <div class="form-signin">
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>


<%- include("../partials/footer") %>
