
<%- include("../partials/header") %>

<img style="display: block; margin: auto; width: 40%" src="<%= campground.image %>" style="height: 400px">

    <div class="row">

        <div class="col-md-12 text-center mt-4">
            <h1 style="text-align: center">Edit comment</h1>
        </div>

        <div class="col-md-12">
            <form class="form-signin" action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT " method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-large btn-primary btn-block">Submit</button>
                </div>
            </form>
            <div class="form-signin">
                <a href="/campgrounds/<%= campground_id %>">Go Back</a>
            </div>
        </div>
    </div>

<%- include("../partials/footer") %>
