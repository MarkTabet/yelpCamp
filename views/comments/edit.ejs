
<%- include("../partials/header") %>


<div class="container">
    <div class="row">

        <img style="display: block; margin: auto; width: 40%" src="<%= campground.image %>" style="height: 400px">

        <h1 style="text-align: center">Edit comment to <%= campground.name %></h1>

        <div style="width: 30%; margin: 30px auto">
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT " method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-large btn-primary btn-block">Submit</button>
                </div>
            </form>
            
            <br>
            <a href="/campgrounds/<%= campground_id %>">Go Back</a>
            <br>
            <br>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>
