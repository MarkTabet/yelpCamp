
<%- include("../partials/header") %>


    <div class="row">

        <img style="display: block; margin: auto; width: 40%" src="<%= campground.image %>" style="height: 400px">
        
        <h1 style="text-align: center">Add comment to <%= campground.name %></h1>

        <div style="width: 30%; margin: 30px auto">
            <form action="/campgrounds/<%= campground._id %>/comments" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <button class="btn btn-large btn-primary btn-block">Submit</button>
                </div>
            </form>

            
            <br>
            <a href="/campgrounds/<%= campground._id %>">Go Back</a>
            <br>
            <br>
        </div>
    </div>

    
<%- include("../partials/footer") %>
